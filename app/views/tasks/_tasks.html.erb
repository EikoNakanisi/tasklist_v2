<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted"> 登録日時 <%= task.created_at %></span>
        </div>
        <div>
          <table class="table table-bordered">
            <tr>
              <th>コンテンツ</th>
              <td><%= task.content %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= task.status %></td>
            </tr>
          </table>
        </div>

        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>

      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>